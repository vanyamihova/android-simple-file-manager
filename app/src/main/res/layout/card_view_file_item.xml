<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view_file_model_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="@android:color/transparent"
    app:cardMaxElevation="0dp"
    app:cardElevation="0dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/container_color_label"
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:orientation="vertical" >

            <View
                android:id="@+id/line_color_label_orange"
                android:layout_width="7dp"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="@color/colorOrange" />

            <View
                android:id="@+id/line_color_label_blue"
                android:layout_width="7dp"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="@color/colorBlue" />

        </LinearLayout>

        <ImageView
            android:id="@+id/icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginTop="@dimen/default_offset"
            android:layout_marginBottom="@dimen/default_offset"
            android:layout_toRightOf="@id/container_color_label"
            android:layout_marginLeft="@dimen/default_offset"
            android:layout_marginRight="@dimen/default_offset"
            android:scaleType="centerInside" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/icon"
            android:layout_marginTop="@dimen/default_offset"
            android:layout_marginBottom="@dimen/default_offset"
            android:layout_centerVertical="true">

            <TextView
                android:id="@+id/txt_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/lorem_ipsum"
                android:textSize="@dimen/text_size_17"
                android:textColor="@android:color/black" />

            <TextView
                android:id="@+id/txt_create_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/txt_title"
                android:text="@string/lorem_ipsum"
                android:textSize="@dimen/text_size_13"
                android:textColor="@android:color/black" />

        </RelativeLayout>

        <LinearLayout
            android:id="@+id/container_folder_label"
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:orientation="horizontal">

            <View android:layout_width="7dp"
                android:layout_height="match_parent"
                android:background="@color/colorGreyLight" />

            <View android:layout_width="7dp"
                android:layout_height="match_parent"
                android:background="@color/colorGrey" />

        </LinearLayout>

        <View
            android:id="@+id/line_bottom"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_alignParentBottom="true"
            android:background="@color/colorGreyDark" />

    </RelativeLayout>

</android.support.v7.widget.CardView>